<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_intervention_tree" model="ir.ui.view">
        <field name="name">ics.intervention.tree</field>
        <field name="model">ics.intervention</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="type"/>
                <field name="date_planned"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_intervention_form" model="ir.ui.view">
        <field name="name">ics.intervention.form</field>
        <field name="model">ics.intervention</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" string="DÃ©marrer" type="object"
                        class="oe_highlight" states="draft"/>
                    <button name="action_done" string="Terminer" type="object"
                        class="oe_highlight" states="in_progress"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="date_planned"/>
                        <field name="duration"/>
                        <field name="employee_id"/>
                    </group>
                    <notebook>
                        <page string="Rapport">
                            <field name="report"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_intervention_root" name="Interventions"/>
    <menuitem id="menu_intervention" name="Toutes les interventions"
        parent="menu_intervention_root" action="action_intervention"/>

    <record id="action_intervention" model="ir.actions.act_window">
        <field name="name">Interventions</field>
        <field name="res_model">ics.intervention</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>