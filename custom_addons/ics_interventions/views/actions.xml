<odoo>

    <!-- Douane Task Actions -->
        <!-- douane task action -->
        <record id="product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">form</field>
        </record>


        <record id="facture_action" model="ir.actions.act_window">
            <field name="name">Facture</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form</field>
        </record>


        <record id="action_final" model="ir.actions.act_window">
            <field name="name">Facture Final</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">form</field>
        </record>

    <!-- Supplier/Fournisseur Action -->
        <!-- liste des produits action -->

        <record id="list_action" model="ir.actions.act_window">
            <field name="name">Liste des produits</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban</field>
        </record>


</odoo>