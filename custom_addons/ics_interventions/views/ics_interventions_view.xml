<?xml version="1.0"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_intervention_kanban" model="ir.ui.view">
        <field name="name">ics.intervention.kanban</field>
        <field name="model">ics.intervention</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <field name="ref"/>
                            </div>
                            <div>
                                <field name="partner_id"/>
                            </div>
                            <div>
                                Planned: <field name="date_planned"/>
                            </div>
                            <div t-if="record.type.raw_value" class="text-muted">
                                <field name="type"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View (simplified) -->
    <record id="view_intervention_tree" model="ir.ui.view">
        <field name="name">ics.intervention.tree</field>
        <field name="model">ics.intervention</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="partner_id"/>
                <field name="type"/>
                <field name="date_planned"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <!-- Form View (unchanged) -->
    <record id="view_intervention_form" model="ir.ui.view">
        <field name="name">ics.intervention.form</field>
        <field name="model">ics.intervention</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="ref"/>
                        <field name="partner_id"/>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="date_planned"/>
                        <field name="duration"/>
                        <field name="employee_id"/>
                        <field name="state" widget="statusbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update Action to Show Kanban First -->

</odoo>